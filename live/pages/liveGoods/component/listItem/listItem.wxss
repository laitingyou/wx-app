@import '/style/iconfont.wxss';

.goodsMain-content {
    display: flex;
    flex-flow: row wrap;
    align-content: flex-start;
    padding: 14rpx;
}

.item {
    display: flex;
    flex: 0 0 50%;
    position: relative;
    margin-top: 14rpx;
    padding: 14rpx;
    width: 50%;
    box-sizing: border-box;
    overflow: hidden;
}

.itemBox {
    display: block;
    width: 100%;
}

.ellipsis {
    white-space: nowrap;
    word-break: keep-all;
    overflow: hidden;
    text-overflow: ellipsis;
}

.itemInner {
    position: relative;
    z-index: 1;
    width: 100%;
    padding-top: 125%;
    display: block;
}

.item-image {
    position: absolute;
    z-index: 1;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: hidden;
}

.item-image-img {
    width: 100%;
    height: 100%;
}

.item-index {
    position: absolute;
    z-index: 2;
    top: 10rpx;
    left: 10rpx;
    width: 38rpx;
    height: 38rpx;
    background: #f00;
    border: 0 solid #d8d8d8;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20rpx;
    color: #fff;
    letter-spacing: 0;
}

.item-title {
    margin-top: 10rpx;
    font-size: 28rpx;
    color: #4a4a4a;
    line-height: 28rpx;
    display: block;
}

.item-price-car {
    width: 48rpx;
    height: 48rpx;
}

.item-price-car:before {
    content: "\e68a";
    font-size: 48rpx;
    color: #fe3666;
}

.item-price {
    margin-top: 10rpx;
    font-size: 28rpx;
    color: #f00;
    letter-spacing: 0;
    display: flex;
    justify-content: space-between;
}

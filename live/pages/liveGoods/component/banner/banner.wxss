.liveGoodsBanner {
    position: relative;
    z-index: 1;
    height: 400rpx;
    overflow: hidden;
}

.liveGoodsBanner-img {
    width: 100%;
    height: 100%;
}

.liveGoodsBanner-inner {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
}

.topOperate {
    padding: 20rpx 20rpx 0;
    overflow: hidden;
}

.topOperate-attention {
    float: right;
    font-size: 28rpx;
    line-height: 52rpx;
    border-radius: 40rpx;
    padding: 0 30rpx;
    color: #fff;
    background-color: #fe3666;
    border: 0;
    outline: 0;
}

.topStore {
    display: block;
    text-align: center;
    color: #fff;
}

.topStore-img {
    width: 60rpx;
    height: 60rpx;
    overflow: hidden;
    border-radius: 30rpx;
    display: -webkit-flex;
    display: flex;
    border: 1rpx solid #fff;
    margin: 0 auto;
}

.topStroe-name {
    margin: 20rpx 0;
    display: block;
    font-size: 32rpx;
}

.topStroe-address {
    background-color: rgba(0, 0, 0, 0.6);
    line-height: 48rpx;
    font-size: 24rpx;
    padding: 0 24rpx;
    display: inline-block;
    border-radius: 48rpx;
}

@import '/style/iconfont.wxss';
.liveItem {
    font-size: 28rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    padding: 28rpx;
    overflow: hidden;
}

.item {
    overflow: hidden;
}

.liveImgArea {
    float: left;
    width: 280rpx;
    height: 280rpx;
    position: relative;
    z-index: 1;
    border-radius: 2px;
    overflow: hidden;
}

.liveImg {
    width: 100%;
    height: 100%;
    background-color: #eee;
}

@keyframes liveIcon {
    form {
        opacity: 1;
    }

    to {
        opacity: 0;
    }
}

.liveHit {
    position: absolute;
    z-index: 1;
    top: 10rpx;
    left: 10rpx;
    color: #fff;
    line-height: 40rpx;
    font-size: 20rpx;
    padding: 0 15rpx;
    border-radius: 20rpx;
    background-image: linear-gradient(138deg, #f72386 0, #ff2853 100%);
    display: -webkit-flex;
    display: flex;
    align-items: center;
}

.liveHit:before {
    content: '';
    background-color: #fff;
    width: 8rpx;
    height: 8rpx;
    margin-right: 8rpx;
    border-radius: 8rpx;
    animation: liveIcon 0.8s linear 0.8s infinite alternate;
}

.liveList-right {
    margin-left: 300rpx;
    height: 280rpx;
    position: relative;
    z-index: 1;
}

.store-info-name {
    display: block;
    color: #222;
}

.store-info-address {
    display: block;
    color: #aaa;
    font-size: 24rpx;
    margin-top: 10rpx;
}

.store-info-time-inner {
    margin-left: 10rpx;
    color: #008ef3;
}

.goodsList {
    position: absolute;
    z-index: 1;
    left: 0;
    bottom: 0;
    width: 100%;
}

.goodsList-li, .goodsList-more {
    width: 90rpx;
    height: 90rpx;
    border-radius: 6rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}

.goodsList-more {
    float: right;
    background-color: #fbb0c2;
    color: #fe3666;
    box-sizing: border-box;
    font-size: 20rpx;
}

.goodsList-ul {
    height: 90rpx;
    overflow: hidden;
}

.goodsList-li {
    float: left;
    margin-right: 8rpx;
}

@keyframes liveXin0 {
    0% {
        opacity: 1;
        transform: translate3d(0, 0, 0);
    }

    34% {
        transform: translate3d(-100%, -150%, 0);
    }

    100% {
        opacity: 0;
        transform: translate3d(0, -800%, 0);
    }
}

@keyframes liveXin1 {
    0% {
        opacity: 1;
        transform: translate3d(0, 0, 0);
    }

    45% {
        transform: translate3d(50%, -150%, 0);
    }

    100% {
        opacity: 0;
        transform: translate3d(0, -800%, 0);
    }
}

.xin {
    width: 50rpx;
    height: 50rpx;
    font-size: 50rpx;
    position: absolute;
    z-index: 1;
    bottom: 5%;
    right: 5%;
    opacity: 0;
}

.xin0:before {
    content: "\e617";
    color: #ff2853;
}

.xin1:before {
    content: "\e617";
    color: #008ef3;
}

.xin2:before {
    content: "\e617";
    color: #ffd032;
}

.xin3:before {
    content: "\e617";
    color: #009120;
}

.xin0 {
    animation: liveXin0 2.5s linear 0s infinite normal;
}

.xin1 {
    animation: liveXin0 2.5s linear 0.5s infinite normal;
}

.xin2 {
    animation: liveXin1 2.5s linear 1s infinite normal;
}

.xin3 {
    animation: liveXin1 2s linear 1.5s infinite normal;
}

.wrapper{
  display: flex;
  justify-content: left;
  align-items: center;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 6rpx;
  position: fixed;
  z-index: 1005;
  top: 200rpx;
  left: 10rpx;
  padding-right: 20rpx;
  overflow: hidden;
  opacity: 0;
  transition: all 1s;
  box-shadow:0px 0px 2rpx 1rpx rgba(96, 96, 96, 0.4);
  pointer-events: none;
}
.avatar{
  width: 55rpx;
  height: 55rpx;
}
.msg{
  margin-left: 20rpx;
  color: #ffffff;
  white-space: nowrap;
  display: block;
  font-size: 20rpx;
  text-align: left;
}

.show{
  opacity: 1;

}


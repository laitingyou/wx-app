.counter-box{
  width: 140px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  height: 35px;
  box-sizing: border-box;
}
.reduce,.add{
  padding: 2px 10px;
  height: 100%;
  width: 35px;
  box-sizing: border-box;
  line-height: 30px;
  text-align: center;
  color: #ffffff;

}
.reduce{
  border-right: 1px solid #d9d9d9;
  background: #FE3666;
  border-radius: 3px;
}
.add{
  border-left: 1px solid #d9d9d9;
  background: #FE3666;
  border-radius: 3px;
}
.disable{
  background: #CCCCCC;
}
.input{
  text-align: center;
  width: 50px;
  border: 1px solid rgba(151, 151, 151, 0.43);
  border-radius: 3px;
  height: 100%;
  color: #FE3666;
}
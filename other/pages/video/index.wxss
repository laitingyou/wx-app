@import "../../../style/iconfont.wxss";
.container {
    position: fixed;
    top: 50%;
    left: 50%;
    width: 100%;
    z-index: 99999;
    transform: translate(-50%,-50%);
    overflow: hidden;
    height: 100vh;
}
.cover{
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99998;
    background: transparent;
}
.video {
    width: 750rpx;
    height: 100vh;
    overflow: hidden;
}
.close{
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100000;
    width: 100%;
    height: 70px;
    background: #FF4069;
}
.title{
    position: fixed;
    top: 36px;
    z-index: 100002;
    width: 100%;
    display: block;
    text-align: center;
    color: #ffffff;
    font-size: 38rpx;
    font-weight: 600;
    pointer-events: none;
}
.down{
    z-index: 100001;
    width: 70rpx;
    height:70rpx ;
    color: #ffffff;
    font-size: 40rpx;
    position: fixed;
    top: 20px;
    left: 10rpx;
}
.bottom{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 200rpx;
    /*background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(rgba(0,0,0,0)), to(rgba(0,0,0,7)));*/
    background-image: linear-gradient(to bottom, rgba(0,0,0,0),rgba(0,0,0,0.7) 100%);
    display: flex;
    align-items: flex-end;
    justify-content: center;
    flex-direction: row;
    z-index: 100000;
    padding-bottom: 30rpx;
}
.btn{
    width: 250rpx;
    padding: 10rpx 0rpx;
    border-radius:100rpx 100rpx;
    text-align: center;
    font-size: 40rpx;
}
.left-btn{
    background-color: #FF6389;
    color: #ffffff;
}
.right-btn{
    background-color: #FF0017;
    color: #ffffff;
}
.pk{
    color: #ffffff;
    margin: 0 50rpx;
    font-size: 40rpx;
    padding-bottom: 17rpx;
}
.btn-bottom{
    font-size: 24rpx;
    margin-bottom: 5rpx;
}
.video-play{
    position: fixed;
    top: 50%;
    left: 50%;
    width: 120rpx;
    height: 120rpx;
    transform: translate(-50%,-50%);
}
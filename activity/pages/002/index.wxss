.none {
    display: none;
}
.header {
    width: 100%;
    height: 310rpx;
    background: #ccc;
}

.head .time {
    position: absolute;
    width: 100%;
    bottom: 29.4%;
    font-size: 15rpx;
    color: #feed64;
    text-align: center;
}

.middle {
    position: relative;
}

.middle .tip {
    height: 60rpx;
}

.middle .tip .tip-li {
    float: left;
    width: 50%;
    min-height: 90rpx;
    text-align: center;
    background: #565a58;
    color: #fff;
    position: relative;
    padding: 6rpx 0;    
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.tip .tip-li text{
    display: flex;
}
.tip .tip-li .time {
    color: #fff;
    font-size: 24rpx;
}

.tip .tip-li.active {
    background: #ff2400;
}

.tip .tip-li.active:after {
    content: '';
    width: 0;
    height: 0;
    border-top: 14rpx solid #ff2400;
    border-left: 14rpx solid transparent;
    border-right: 14rpx solid transparent;
    position: absolute;
    bottom: -12rpx;
    left: 50%;
    margin-left: -10rpx;
}

.middle .goods {
    position: relative;
    padding: 0 5rpx;
    margin-top: 60rpx;
}

.goods-li {
    margin-top: 12rpx;
    padding: 16rpx;
    background: #fff;
    overflow: hidden;
    display: flex;
    justify-content: space-around;
}

.goods-li .good-img {
    position: relative;
    display: flex;
    flex: 0 0 280rpx;
    width: 280rpx;
    height: 280rpx;
    overflow: hidden;
}
.goods-li .good-img image{
   width: 100%;
   height: 100%;
}
.goods-li .good-img img {
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
}

.goods-li .good-message {    
    flex: 1 0 auto;
    width: 0;
    padding: 0 6rpx 0 24rpx;
    position: relative;
    background: #fff;
    box-sizing: border-box;
}

.good-message .title {
    /* margin-top:06rpx; */
    color: #000;
    /* padding-bottom: 16%; */
    line-height: 1.2;
    margin-bottom: 5rpx;
    font-size: 32rpx;
}

.good-message .store-name {
    display: block;    
    color: #404040;    
    text-overflow: ellipsis;
    white-space: nowrap;
}
.good-message .store-name {
    color: #404040;
}

.good-message .price {
    /* padding-right: 5rpx; */
    font-size: 26rpx;
    color: #ff0000;
    font-style: oblique;
    /* text-align: right; */
    /* overflow: hidden; */
    font-weight: bold;
}

.good-message .price {
    color: #ff0000;
}

.good-message .price {
    font-size: 48rpx;
}
.good-message .price-samll {
    font-size: 36rpx;
}
.good-message .old-price { 
    font-size: 24rpx;   
    color: #666;
    text-decoration: line-through;

}

.good-message .button {
    background: #ff0000;
    border-radius: 4rpx;
    /* text-align: center; */
    font-size: 26rpx;
    color: #fff;
    line-height: 58rpx;
    padding: 10rpx 20rpx;
}

.good-message .button.show {
    background: #1dbc3f;
}

.good-message .button.over {
    background: #666;
}

.middle .b-button {
    display: inline-block;
    margin: 40rpx auto;
    height: 68rpx;
    width: 50%;
    background: #1dbc3f;
    color: #fff;
    font-size: 34rpx;
    text-align: center;
    line-height: 68rpx;
    border-radius: 100rpx;
}

/*视频*/
.video_window {
    width: 100%;
    position: relative;
}

.video_window video {
    width: 100%;
}

.video_window .coding {
    display: inline-block;
    position: absolute;
    bottom: 0;
    right: 0;
    background: red;
    filter: alpha(opacity=70);
    opacity: 0.7;
    color: #fff;
    padding: 0.20rpx 0.1rpx;
    font-size: 1rpx
}

.i-play {
    width: 30%;
    height: 30%;
    color: #fff;
    font-size: 40rpx;
    left: 50%;
    top: 50%;
    margin-top: -15%;
    margin-left: -15%;
    position: absolute;
    background-image: url(../images/play.png);
    background-size: 100% auto;
}

.picture {
    position: relative;
    height: 100%;
    overflow: hidden;
}

.picture .video {
    text-align: center;
    margin-bottom: -6rpx;
    background: #000;
    height: 1rpx;
    width: 1rpx;
}

.picture .video1 {
    width: 100%;
    height: auto;
}

.picture .video-time {
    position: absolute;
    right: 1rpx;
    bottom: 06rpx;
    font-size: 1.1rpx;
    color: #FFF;
}

.picture .tvp_overlay_play, .picture .tvp_overlay_poster {
    position: absolute;
    top: 0px;
    width: 100%;
    height: 100%;
    line-height: 4;
    text-align: center;
}

.picture img {
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
}

.loading {
    text-align: center;
    color: #aaa;
    font-size: 28rpx;
    padding-bottom: 1rpx;
    margin-top: 1rpx;
}

.tips-title {
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 30rpx;
    justify-content: space-between;
    font-size: 28rpx;
    font-weight: bold;
}
.tips-title .text {
    margin-right: 10rpx;
}
.tips-title .time .times {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    background: #000;
    text-align: center;
    color: #fff;
    border-radius: 4rpx;
    line-height: 40rpx;
    margin: 0 10rpx;
}

.goods-top {
    margin-bottom: 28rpx;
}

.goods-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;

}
.good-message{
    height: 139rpx;
}

.goods-img-icon{
    display: block;
    background: #ff0000;
    text-align: center;
    color: #fff;
    top: 0;
    left: 11rpx;
    z-index: 1;
    width: 60rpx;
    height: 40rpx;
    position: absolute;
    font-size: 24rpx;
}

.goods-img-icon:after {
    content: '';
    width: 0;
    height: 0;
    border-top: 10rpx solid #ff2400;
    border-left: 30rpx solid transparent;
    border-right: 30rpx solid transparent;
    position: absolute;
    bottom: -8rpx;
    left: 0;
}

.button:active{
    opacity: .8;
}
.mEllipsis {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.goods-bootom {
    text-align: center;
}
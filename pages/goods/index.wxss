}

/*-----detail----*/
.detail{
  margin-top: 20rpx;
  line-height: 68rpx;
  background-color: #ffffff;
  padding: 20rpx 28rpx;
}
.detail-header{
  text-align: center;
}

.detail-paramBox{
  background-color: #F0F0F0;
  border-radius: 10rpx;
  padding: 30rpx;
}
.detail-img-box{
  margin: 20rpx 0;
}
.detail-img{
  width: 100%;
  display: block;
}





/*------template-----*/
.detail-paramBox{
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap;

}
.label-item{
  display: inline-block;
  margin-right: 20rpx;
  width: 46%;
  display: flex;
  align-items: flex-start;
}
.label{
  color: #909090;
  width: 140rpx;
  display: inline-block;
  text-align: right;

}
.value{
  display: inline-block;
  width: 150rpx;
}
.placeholder{
  height: 60rpx;
}
/*优惠券弹窗*/
.discountPop-header{
  text-align: center;
  line-height: 80rpx;
}
.discountPop-body{

}
.coupon{
    width: 688rpx;
    height: 160rpx;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  color: #ffffff;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.has-coupon{
  background: #FE3666;

}
.no-coupon{
  background: #B5B5B5;
}
.coupon-top{
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.coupon-l-t{
  width: 520rpx;
  height: 100%;
  position: relative;

}
.coupon-top-money{

}

/*------mask---------*/
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.56);
  z-index: 2000;
}
.mask-content{
  position: absolute;
  top: 30%;
  text-align: center;
  width: 100%;
}
.mask-content-title{
  font-size: 24rpx;
  color: #ffffff;
  text-align: center;
}
.mask-content-btn{
  display: block;
  line-height: 60rpx;
  background: #FE3666;
  border-radius: 200rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  width: 150rpx;
  height: 60rpx;
  text-align: center;
  margin: 40rpx auto;
}

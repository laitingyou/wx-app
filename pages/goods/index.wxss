.detail-wrapper{
  background-color: #EFEFEF;
  font-size: 24rpx;
}

.goods-img{
  height: 750rpx;
  position: relative;
}
.swiper{
  width: 100vw;
  height: 100%;
}
.slide-image{
  width: 100vw;
  height: 100%;
}
.icon-play{
    position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.icon-play::before{
  font-size: 160rpx;
  color: #fff;

}

.swiper-current{
  float: right;
  margin: 0 28rpx 20rpx 0;

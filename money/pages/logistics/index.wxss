page {
    background-color: #f1f1f1;
    color: #4a4a44;
    font-size: 28rpx;
}

.box {
    background-color: #fff;
    margin-bottom: 20rpx;
    border-top: 1rpx solid #d8d8d8;
    border-bottom: 1rpx solid #d8d8d8;
}
.null{
    margin-top: 20rpx;
    text-align: center;
}
.box-header, .box-main {
    padding: 28rpx;
}

.box-header {
    border-bottom: 1rpx solid #d8d8d8;
}

.primary, .stepList-itemActive {
    color: #3eb135;
}

/*快递单信息*/

.logisticsMain {
    display: flex;
}

.logisticsMain-center {
    flex: 1 0 auto;
    width: 0;
    padding: 0 28rpx;
}

.logisticsMain-left {
    flex: 0 1 152rpx;
}

.logisticsMain-right {
    display: flex;
    flex: 0 1 152rpx;
    align-items: center;
    justify-content: flex-end;
}

.logisticsMain-img {
    width: 152rpx;
    height: 152rpx;
    border-radius: 2rpx;
    background-color: #eee;
}

.logisticsMain-text {
    display: block;    
    width: 100%;
    line-height: 51rpx;
}

.logisticsMain-btn {
    align-self: center;
    font-size: 24rpx !important;
    padding: 0 18rpx !important;
    display: inline-flex !important;
}

/*快递单信息 end*/

.address {
    display: flex;
    color: #888;
}

.address-icon {
    flex: 0 0 50rpx;
    font-size: 38rpx;
    margin-top: 4rpx;
}

.address-text {
    flex: 1 0 auto;
    width: 0;
}


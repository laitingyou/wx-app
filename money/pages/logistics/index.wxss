/*订单踪迹end*/

.stepList {
    display: flex;
}

.stepList-plan {
    display: flex;
    flex: 0 1 18rpx;
    width: 18rpx;
    margin: 30rpx 0 80rpx 0;
    border-right: 1rpx solid #c8cdd2;
}

.stepList-main {
    flex: 1 0 auto;
    flex-direction: column;
    width: 0;
    color: #888;
}

.stepList-item {
    position: relative;
    z-index: 1;
    padding: 18rpx 0 0 36rpx;
}

.stepList-item:before {
    content: '';
    position: absolute;
    z-index: 1;
    top: 25rpx;
    left: -7rpx;
    width: 14rpx;
    height: 14rpx;
    background-color: #c8cdd2;
    border-radius: 7rpx;
}

.stepList-itemActive:before {
    content: '';
    position: absolute;
    z-index: 1;
    top: 25rpx;
    left: -14rpx;
    width: 24rpx;
    height: 24rpx;
    border: 4rpx solid #c5e7c2;
    background-color: #3eb135;
    border-radius: 16rpx;
}

.stepList-item-text, .stepList-item-time {
    display: block;
}

.stepList-item-text {
    line-height: 32rpx;
}

.stepList-item-time {
    font-size: 24rpx;
    line-height: 60rpx;
    border-bottom: 1rpx solid #c8cdd2;
}

.stepList-fistTime {
    border-bottom: none;
}

page {
    background-color: #fff;
    color: #4a4a4a;
    font-size: 28rpx;
}
.header {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    background-image: linear-gradient(to right, #F72386 0%, #FA6C00 100%);
    color: #fff;
    width: 100%;
    padding: 46rpx 0;
}
.header text {
    display: flex;
}
.header-h1 {
    font-size: 32rpx;
}
.header-strong {
    font-size: 60rpx;
    font-weight: 700;
    padding: 20rpx 0;
}
.header-main {
    display: flex;
    flex-direction: row;
}
.header-main-text {
    padding: 0 20rpx;
}
.header-fixed {
    position: absolute;
    z-index: 1;
    top: 10rpx;
    right: 0;
    background-color: rgba(0, 0, 0, .28);
    height: 44rpx;
    font-size: 20rpx;
    align-items: center;
    border-radius: 22rpx 0 0 22rpx;
    padding: 0 22rpx;
    text-shadow: 2rpx 2rpx rgba(0,0,0,.4)
}

.tabNav {
    margin-top: 1rpx;
    display: flex;
    flex-direction: row;
}
.tabNav-li {
    position: relative;
    z-index: 1;
    display: flex;
    flex: 1 1 50%;
    justify-content: center;
    align-items: center;
    height: 88rpx;
    font-size: 32rpx;
    background-color: #fff;
    box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, .2);
}
.tabNav-li.active {
    color: #fff;
    box-shadow: none;
    background-image: linear-gradient(to right, #F72386 0%, #FA6C00 100%);
    z-index: 2;
}
.tabNav-li.active:after {
    content: '';
    position: absolute;
    bottom: -16rpx;
    left: 50%;
    margin-left: -15rpx;
    font-size: 0;
    width: 0;
    height: 0;
    border-left: 24rpx solid transparent;
    border-right: 24rpx solid transparent;
    border-top: 18rpx solid #f84a3c;
} 

.list {
    display: flex;
    flex-direction: column;
    background-color: #fff;  
    padding: 24rpx;
}
.list-item {
    display: flex;
    flex-direction: row;
    border-bottom: 1rpx solid #D8D8D8;
    padding: 24rpx 0;
    /*align-items: center;*/
}
.list-item-left,
.list-item-main,
.list-item-right {
    display: inline-flex;
}
.list-item-left {
    flex: 0 0 40rpx;     
    height: 100%;  
}
.list-item-left:before {
    display: inline-flex;
    content: '';
    background: #4A4A4A;
    font-size: 0;
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    margin-top: 16rpx;
}
.list-item-main {
    flex: 1 0 auto;
    flex-direction: column;
}
.list-item-right {
    flex: 0 0 144rpx;
    font-size: 28rpx;
    text-align: right;
    justify-content: flex-end;
    align-self: center;
}
.listText {
    min-height: 1.5em;
    font-size: 32rpx;
}
.listTextSmall {
    color: #888;
    font-size: 28rpx;
}
.listRed {
    color: #ff0d0d;
}
.listBtn {
    display: flex;
    align-items: center;
    color: #fff;
    background-image: linear-gradient(to right, #F72386 0%, #FA6C00 100%);
    height: 60rpx;
    border-radius: 30rpx;
    padding: 0 30rpx;
}
.listBottomText {
    text-align: center;
    line-height: 2em;
}
.rule-title{
    text-align: center;
    font-size: 28rpx;
    font-weight: bold;
    line-height: 80rpx;
}
.rule-content{
    font-size: 24rpx;
    display: flex;
    justify-content: left;
    flex-direction: column;
    padding: 0 10rpx 30rpx;
}
.rule-content text{
    line-height: 50rpx;
    text-indent:-1.5em;
    padding-left: 1.5em;
    margin-top: 10rpx;
}